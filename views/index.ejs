<!DOCTYPE html>
<html>
<head>

  <title>Rock, Paper, Scissors</title>
  <link rel="stylesheet" href="stylesheets/style.css"/>
  <link href="https://fonts.googleapis.com/css?family=Amatic+SC" rel="stylesheet">
</head>
<body>
  <h1> Let's play... ROCK, PAPER, SCISSORS! </h1>

  <% if (game.isThereAWinner() == undefined) { %>
      <h2> Best of three! </h2>
      <a href="/result?weapon=rock" name="rock"><img src="images/rock.png" width="200"></a>
      <a href="/result?weapon=paper" name="paper"><img src="images/paper.png" width="200"></a>
      <a href="/result?weapon=scissors" name="scissors"><img src="images/scissors.png" width="200"></a><br>

      <% if (game.playerScore > 0 || game.computerScore > 0) { %>
        PLAYER SCORE: <%= game.playerScore %> VS. COMPUTER SCORE: <%= game.computerScore %>
      <% } %>
  <% } else { %>
      <%- game.isThereAWinner() %><br>
      <a href="/restart">Rematch!</a>
  <% } %>
</body>

</html>
